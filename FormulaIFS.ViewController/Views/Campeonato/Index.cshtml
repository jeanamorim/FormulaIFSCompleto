@{
    ViewBag.Title = "Index";
}

<ul class="nav nav-tabs">
    <li><a data-toggle="tab" href="#firstTab">Campeonatos</a></li>
    <li class="active"><a data-toggle="tab" href="#secondTab">Add Novo</a></li>
</ul>
<div class="tab-content">
    <div id="firstTab" class="tab-pane fade in">@Html.Action("Visao")</div>
    <div id="secondTab" class="tab-pane fade in active">@Html.Action("AdicionarEditar")</div>
</div>

<link href="https://cdn.datatables.net/1.10.16/css/jquery.dataTables.min.css" rel="stylesheet" />
@section scripts{
    @Scripts.Render("~/bundles/jqueryval")

    <script src="https://cdn.datatables.net/1.10.16/js/jquery.dataTables.min.js"></script>


    <script>
        function activatejQueryTable() {
            $("#CampeonatoTable").DataTable();
        }

        $(function () {
            activatejQueryTable();
        });

    </script>
}