@model IEnumerable<FormulaIFS.Model.Campeonato>

@{
    ViewBag.Title = "Visao";
    Layout = null;

}

<table class="table table-striped table-condensed" id="CampeonatoTable">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Descricao)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TipoCampeonato)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.QtdVencedor)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DataInicio)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DataFim)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EhPublico)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SituacaoCampeonato)
            </th>

            <th>
                @Html.DisplayNameFor(model => model.Categoria.Nome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Categoria.Descricao)
            </th>

            <th></th>
        </tr>
      
    </thead>
    <tbody>

        @foreach (var item in Model)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Descricao)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TipoCampeonato)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.QtdVencedor)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DataInicio)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DataFim)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EhPublico)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SituacaoCampeonato)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Categoria.Nome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Categoria.Descricao)
            </td>

            <td>
                <a class="btn btn-primary btn-sm" onclick="Edit('@Url.Action("AdicionarEditar", "Campeonato", new { id=@item.Id})')"><i class="fa fa-pencil fa-lg"></i></a>
                <a class="btn btn-danger btn-sm" onclick="Delete('@Url.Action("Delete", "Campeonato", new { id=@item.Id})')"><i class="fa fa-trash fa-lg"></i></a>
            </td>
        </tr>
        }
    </tbody>
</table>